<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#008875">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/back"
                android:background="#008875"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目资料"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/finish"
                android:background="#008875"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="对话"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抱大腿"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/project_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="项目负责人：黄国正"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#008875"
        android:layout_marginLeft="10dp"></LinearLayout>
    <TextView
        android:id="@+id/project_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="项目地址：中山大学"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#008875"
        android:layout_marginLeft="10dp"></LinearLayout>
    <TextView
        android:id="@+id/personnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="项目人数：5"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#008875"
        android:layout_marginLeft="10dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tech"
            android:textColor="#008875"
            android:text="技术"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/market"
            android:textColor="#ffffff"
            android:text="市场"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/product"
            android:textColor="#ffffff"
            android:text="产品"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/beauty"
            android:textColor="#008875"
            android:text="美工"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/manage"
            android:textColor="#ffffff"
            android:text="运营"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#008875"
        android:layout_marginLeft="10dp"></LinearLayout>
    <TextView
        android:id="@+id/introduction"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="世界第一UI app！世界第一UI app！世界第一UI app！世界第一UI app！世界第一UI app！世界第一UI app！世界第一UI app！世界第一UI app！世界第一UI app！"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#008875"
        android:layout_marginLeft="10dp"></LinearLayout>
</LinearLayout>