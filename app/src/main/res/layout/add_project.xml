<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#008875">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/back"
                android:background="#008875"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目发布"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/finish"
                android:background="#008875"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="项目名称"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#008875"></LinearLayout>

        <EditText
            android:id="@+id/project_manager_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="项目负责人"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#008875"></LinearLayout>

        <EditText
            android:id="@+id/project_main_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="项目所在地址"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#008875"></LinearLayout>

        <EditText
            android:id="@+id/need_person_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="项目所需人数"
            android:inputType="number"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#008875"></LinearLayout>

        <EditText
            android:id="@+id/project_introduction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="项目介绍"
            android:maxLength="140"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#008875"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择标签："
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tech"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="技术"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/market"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="市场"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="产品"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/beauty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="美工"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="运营"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#008875"></LinearLayout>
    </LinearLayout>
</LinearLayout>